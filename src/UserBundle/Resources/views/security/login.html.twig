{% extends "UserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    wes
    {% if error %}
        <div class="alert alert-danger" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <strong>Error!</strong>
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal" role="form">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <div class="form-group">
            <div class="col-sm-12">
                <input type="text" class="form-control" name="_username" id="username" placeholder="{{ 'security.login.username'|trans }}" required="required">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                <input type="password" class="form-control" name="_password" id="password" placeholder="{{ 'security.login.password'|trans }}" required="required">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-6">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" >{{ 'security.login.remember_me'|trans }}
                    </label>
                </div>
            </div>
            <div class="col-sm-6">
                <input type="submit" id="_submit" name="_submit" name="_submit"  class="btn btn-primary pull-right" value="{{ 'security.login.submit'|trans }}" />
            </div>
        </div>

    </form>
{% endblock fos_user_content %}