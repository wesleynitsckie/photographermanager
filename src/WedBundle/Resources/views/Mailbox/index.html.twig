{% extends 'WedBundle::base.html.twig' %}

{% block pageHeading %}Shoots{% endblock %}
{% block subheading %}{% endblock %}

{% block content %} <!-- Main content -->
    <h1>Mailbox list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Clientid</th>
                <th>Subject</th>
                <th>Body</th>
                <th>Created</th>
                <th>Parentid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('mailbox_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.clientId }}</td>
                <td>{{ entity.subject }}</td>
                <td>{{ entity.body }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.parentId }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('mailbox_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('mailbox_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('mailbox_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
