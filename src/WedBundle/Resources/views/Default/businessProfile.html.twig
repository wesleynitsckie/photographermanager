{% extends 'WedBundle::base.html.twig' %}

{% block pageHeading %} Photographer Details {% endblock %}
{% block subheading %}  {% endblock %}
{% block content %}
    <div class="row">

    {{ form_start(form) }}
        <div class="col-md-6">

            {{ form_errors(form) }}
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Photography Business Info</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form">
                    <div class="box-body">
                        {{ form_row(form.businessName) }}
                        {{ form_row(form.businessEmail) }}
                        {{ form_row(form.contactNumber) }}
                        {{ form_row(form.file) }}
                        {{ form_row(form._token) }}
                        <img src="{{ asset(app.user.getWebPath()) }}"
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <!-- /.box -->


        </div>

    {{ form_end(form) }}


{% endblock %}