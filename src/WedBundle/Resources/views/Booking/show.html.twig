{% extends 'WedBundle::base.html.twig' %}

{% block pageHeading %}Clients{% endblock %}
{% block subheading %}Create a new Client{% endblock %}

{% block content -%} <!-- Main content -->
    <h1>Booking</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Bookingdatetime</th>
                <td>{{ entity.bookingDateTime|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type.name }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ entity.location }}</td>
            </tr>
            <tr>
                <th>Clientid</th>
                <td>{{ entity.clientId }}</td>
            </tr>
            <tr>
                <th>Iscomplete</th>
                <td>{{ entity.isComplete }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('bookings') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('booking_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
